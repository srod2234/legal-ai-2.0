# Legal AI Frontend Environment Configuration

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Legal AI Application
NEXT_PUBLIC_APP_VERSION=1.0.0

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Chat Configuration
NEXT_PUBLIC_CHAT_TYPING_DELAY=1000
NEXT_PUBLIC_CHAT_MESSAGE_LIMIT=1000
NEXT_PUBLIC_CHAT_WEBSOCKET_RECONNECT_ATTEMPTS=5

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.docx,.txt
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=5

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ANIMATION_DURATION=300

# Security Configuration (Public)
NEXT_PUBLIC_SESSION_TIMEOUT=30
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# Error Reporting (if using Sentry)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Analytics (if using Google Analytics)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Development Configuration
NEXT_PUBLIC_LOG_LEVEL=debug
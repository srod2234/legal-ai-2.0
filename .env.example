# Legal AI Application Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=legal_ai_db
POSTGRES_USER=legal_ai_user
POSTGRES_PASSWORD=secure_password_change_in_production

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMADB_USERNAME=admin
CHROMADB_PASSWORD=chromadb_password_change_in_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_password_change_in_production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_super_secret_key_change_in_production_make_it_32_chars_minimum
JWT_SECRET_KEY=jwt_secret_key_change_in_production_make_it_very_secure

# =============================================================================
# LLM CONFIGURATION (CoreWeave)
# =============================================================================
LLM_API_BASE_URL=http://your-coreweave-endpoint:8000/v1
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL_NAME=meta-llama/Llama-2-70b-chat-hf

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8000

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# SSL CERTIFICATE CONFIGURATION (Production)
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/legal-ai.crt
SSL_KEY_PATH=/etc/ssl/private/legal-ai.key

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=grafana_admin_password

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=legal-ai-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
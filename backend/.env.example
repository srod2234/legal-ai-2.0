# Legal AI Application Environment Configuration

# Application Configuration
APP_NAME=Legal AI Application
DEBUG=false

# Security Configuration (REQUIRED)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///./legal_ai.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/legal_ai

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=legal_documents

# LLM Configuration (REQUIRED)
# For OpenAI (development/testing)
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# For CoreWeave (production with LLaMA 3 70B)
# LLM_PROVIDER=coreweave
# LLM_API_KEY=your-coreweave-api-key-here
# LLM_MODEL=meta-llama/Llama-3.1-70B-Instruct
# LLM_BASE_URL=https://api.coreweave.com/v1

LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=  # Uses LLM_API_KEY if not set
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# File Upload Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_EXTENSIONS=[".pdf", ".docx", ".txt"]

# OCR Configuration
ENABLE_OCR=true
TESSERACT_CMD=  # Auto-detect if not set

# Performance Configuration
MAX_CONCURRENT_UPLOADS=5
CHAT_RESPONSE_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100

# Audit Configuration
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for legal compliance

# Optional: Email Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@legal-ai.com

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry Configuration (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Optional: n8n Integration (for workflow automation)
# N8N_WEBHOOK_URL=http://localhost:5678/webhook/legal-ai
# N8N_API_KEY=your-n8n-api-key

# Optional: Slack Integration
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_CHANNEL=#legal-ai-notifications